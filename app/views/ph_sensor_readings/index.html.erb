<%- model_class = PhSensorReading -%>
<div class="page-header">
  <h1><%=t '.title', :default => "pH Sensor Readings" %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:reading_timestamp) %></th>
      <th>pH</th>
      <th><%= model_class.human_attribute_name(:tank_id) %></th>
      <% if (can? :update, PhSensorReading) || (can? :destroy, PhSensorReading) %>
        <th><%=t '.actions', :default => t("helpers.actions") %></th>
      <% end %>
    </tr>
  </thead>
  <tbody>
    <% @ph_sensor_readings.order('created_at DESC').each do |ph_sensor_reading| %>
      <tr>
        <td><%= link_to ph_sensor_reading.id, ph_sensor_reading_path(ph_sensor_reading) %></td>
        <td><%= ph_sensor_reading.reading_timestamp.in_time_zone("America/Chicago") %></td>
        <td><%= ph_sensor_reading.ph_reading_value %></td>
        <td><%= ph_sensor_reading.tank_id %></td>
        <% if (can? :update, PhSensorReading) %>
          <td>
            <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_ph_sensor_reading_path(ph_sensor_reading), :class => 'btn btn-mini' %>
          </td>
        <% end %>
        <% if (can? :destroy, PhSensorReading) %>  
          <td>
            <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      ph_sensor_reading_path(ph_sensor_reading),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
          </td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<% if (can? :create, PhSensorReading) %>
  <%= link_to t('.new', :default => t("helpers.links.new")),
            new_ph_sensor_reading_path,
            :class => 'btn btn-primary' %>
<% end %>

<br><br>

<%-# this creates the page X,Y,Z at the bottom -%>
<div class="digg_pagination">
    <div class="page_info">
      <%= page_entries_info @ph_sensor_readings %>
    </div>
    <%= will_paginate @ph_sensor_readings, :container => false %>
</div>

